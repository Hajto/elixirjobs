<div class="ui segment">
  <form class="ui form" action="<%= user_path(@conn, :update_profile) %>" method="post">
    <div class="ui dividing header">Update Your Profile</div>
    <input type="hidden" name="_csrf_token" value="<%= get_csrf_token() %>">
    <div class="field">
      <label for="">Name</label>
      <input type="text" name="name" placeholder="Your name" required="required" value="<%= @profile["name"] %>">
    </div>
    <div class="field">
      <label for="">Short Description</label>
      <input type="text" name="short_desc" placeholder="Best way to describe yourself in short!" required="required" value="<%= @profile["short_desc"] %>">
    </div>
    <div class="field">
      <label for="">Description</label>
      <textarea name="description" placeholder="Now it's time to describe yourself, as long as you like!" required="required"><%= @profile["description"] %></textarea>
    </div>
    <div class="field">
      <label for="">Picture</label>
      <input type="text" name="picture_url" placeholder="Your profile picture URL" value="<%= @profile["picture_url"] %>">
    </div>
    <div class="grouped fields">
      <label for="">Interested in</label>
      <div class="inline field">
        <div class="ui checkbox">
          <%= if @profile["interest_fulltime"] do %>
          <input type="checkbox" name="fulltime" checked>
          <% else %>
          <input type="checkbox" name="fulltime">
          <% end %>
          <label>Fulltime</label>
        </div>
      </div>

      <div class="inline field">
        <div class="ui checkbox">
          <%= if @profile["interest_hourly"] do %>
          <input type="checkbox" name="hourly" checked>
          <% else %>
          <input type="checkbox" name="hourly">
          <% end %>
          <label>Hourly Contract</label>
        </div>
      </div>

      <div class="inline field">
        <div class="ui checkbox">
          <%= if @profile["interest_term"] do %>
          <input type="checkbox" name="term" checked>
          <% else %>
          <input type="checkbox" name="term">
          <% end %>
          <label>Term Contract</label>
        </div>
      </div>

      <div class="inline field">
        <div class="ui checkbox">
          <%= if @profile["interest_mentoring"] do %>
          <input type="checkbox" name="mentoring" checked>
          <% else %>
          <input type="checkbox" name="mentoring">
          <% end %>
          <label>Mentoring</label>
        </div>
      </div>

      <div class="inline field">
        <div class="ui checkbox">
          <%= if @profile["interest_volunteer"] do %>
          <input type="checkbox" name="volunteer" checked>
          <% else %>
          <input type="checkbox" name="volunteer">
          <% end %>
          <label>Volunteer</label>
        </div>
      </div>

      <div class="inline field">
        <div class="ui checkbox">
          <%= if @profile["interest_other"] do %>
          <input type="checkbox" name="other" checked>
          <% else %>
          <input type="checkbox" name="other">
          <% end %>
          <label>Other</label>
        </div>
      </div>

    </div>
    <div class="field">
      <label for="">Location</label>
      <input type="text" name="location" placeholder="Your current location" value="<%= @profile["location"] %>">
    </div>

    <div class="field">
      <label for="">Personal Website</label>
      <input type="text" name="website" placeholder="Your personal website URL" value="<%= @profile["website"] %>">
    </div>
    <div class="field">
      <label for="">Resume URL</label>
      <input type="text" name="resume_url" placeholder="Your resume URL" value="<%= @profile["resume_url"] %>">
    </div>

    <div class="field">
      <label for="">Github URL</label>
      <input type="text" name="github_url" placeholder="Your github URL" value="<%= @profile["github_url"] %>">
    </div>

    <div class="field">
      <label for="">Twitter URL</label>
      <input type="text" name="twitter_url" placeholder="Your twitter URL" value="<%= @profile["twitter_url"] %>">
    </div>

    <div class="field">
      <label for="">LinkedIn URL</label>
      <input type="text" name="linkedin_url" placeholder="Your linkedin URL" value="<%= @profile["linkedin_url"] %>">
    </div>

    <button class="ui submit button" type="submit">Update</button>
  </form>
</div>
